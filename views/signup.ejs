
<!DOCTYPE html>

<html lang="en">
  <head>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Sign Up | By Code Info</title>
    <link rel="stylesheet" href="/stylesheets/signupStyle.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <h4>Bowie State University Bank</h4>
    <div class="signup-box">
      
      <h1>Sign Up</h1>

      <% if(message.length > 0) { %>
        <div class="error-msg">
          <%= message %>
        </div>

      <% } %>

      <!-- <form name="loginForm" onsubmit="login()"> -->
      <form name="loginForm" method="POST" action="/signup/add_signup">
        <label>BSU Email</label>
        <input type="email" placeholder="" name="email" id="email"/>
        <label>Password</label>
        <input type="password" name="password" onkeyup="validatePassword(this.value);" placeholder="" id="password"/><span id="msg"></span>
        <label>Confirm Password</label>
        <input type="password" name = "confirmPwrd" placeholder="" id="confirm password"/>
        <input type="submit" value="Submit" id="submit" />

      </form>
      
     

      <p>
        By clicking the Sign Up button, you agree to our <br />
        <a href="#">Terms and Condition</a> and <a href="#">Privacy Policy</a>
      </p>
    </div>
    <style>
      a:hover {
        color: #b7ba01;
        background-color: black;
      }
    </style>
    <p class="para-2">
      Already have an account? <a href="/signin">Sign in here</a>
    </p>

    <script>

      function validatePassword(password) {
                
        // Do not show anything when the length of password is zero.
        if (password.length === 0) {
            document.getElementById("msg").innerHTML = "";
            return;
        }
        // Create an array and push all possible values that you want in password
        var matchedCase = new Array();
        matchedCase.push("[$@$!%*#?&]"); // Special Charector
        matchedCase.push("[A-Z]");      // Uppercase Alpabates
        matchedCase.push("[0-9]");      // Numbers
        matchedCase.push("[a-z]");     // Lowercase Alphabates

        // Check the conditions
        var ctr = 0;
        for (var i = 0; i < matchedCase.length; i++) {
            if (new RegExp(matchedCase[i]).test(password)) {
                ctr++;
            }
        }
        // Display it
        var color = "";
        var strength = "";
        switch (ctr) {
            case 0:
            case 1:
            case 2:
                strength = "Very Weak";
                color = "red";
                break;
            case 3:
                strength = "Medium";
                color = "orange";
                break;
            case 4:
                strength = "Strong";
                color = "green";
                break;
        }
        document.getElementById("msg").innerHTML = strength;
        document.getElementById("msg").style.color = color;
    }
    </script>

  </body>
</html>



